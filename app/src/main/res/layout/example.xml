<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text1"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Jetpack is a suite of libraries to help with app development and reduce boilerplate code. Using modern design practices, Jetpack libraries enable fewer crashes and memory leaks."
        android:layout_height="wrap_content"
         >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="ViewModel is a class that is responsible for preparing and managing the data for an Activity or a Fragment . It also handles the communication of the Activity / Fragment with the rest of the application (e.g. calling the business logic classes)"
        >

    </TextView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_readermode"
        android:src="@drawable/ic_reader_foreground">

    </ImageView>





    <EditText
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/editText"
        android:gravity="center">


    </EditText>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:id="@+id/button"
        app:backgroundTint="@null"
        android:text="Click"
        android:textColor="#000000"
        android:background="@color/teal_200"
        android:gravity="center">

    </Button>

</LinearLayout>